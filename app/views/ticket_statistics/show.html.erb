<p id="notice"><%= notice %></p>

<p>
  <strong>Location:</strong>
  <%= @ticket_statistic.location %>
</p>

<%= link_to ticket_statistics_path do %><i class ="fa fa-arrow-left"></i><% end -%> |
<% if can? :edit, @ticket_statistic %>
    <%= link_to edit_ticket_statistic_path(@ticket_statistic), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
      <i class ="fa fa-edit"></i>
    <% end -%>
<% end %>
<% if can? :destroy, @ticket_statistic %>
    <%= link_to ticket_statistic_path(@ticket_statistic), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
      <i class ="fa fa-times"></i>
    <% end -%>
<% end %>