<div class="row">
	<div class = "col-md-8 col-xs-12">
		<h1>roles</h1>
	</div>
	<div class = "col-md-4 col-xs-12">
		<h2>
			<% if can? :create, @roles %>
		        <%= link_to new_role_path, :class => 'btn btn-primary', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		            <i class ="fa fa-plus"></i>
		        <% end -%>
		    <% end %>
		</h2>
	</div>
</div>

<div class="row">
	<table class="table table-striped table-responsive" id ="roles" >
	  <thead>
	    <tr>
		    	<th>Name</th>
		      	<th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @roles.each do |role| %>
	      <tr>
		        <td><%= role.name %></td>
	
	        <td>
	        	<% if can? :read, @role %>
		            <%= link_to role_path(@role), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		              <i class ="fa fa-eye"></i>
		            <% end -%>
		        <% end %>
		        <% if can? :edit, @role %>
		            <%= link_to edit_role_path(@role), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		              <i class ="fa fa-edit"></i>
		            <% end -%>
		        <% end %>
		        <% if can? :destroy, @role %>
				    <%= link_to role_path(@role), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
				      <i class ="fa fa-times"></i>
				    <% end -%>
				<% end %>
	        

	        </td>
	        
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<br>
<br>

<%= link_to 'New Role', new_role_path %>
