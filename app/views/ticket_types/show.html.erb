<h1><%= @ticket_type.name %> Tickets</h1>


<div class = "row">
    <div class = "col-md-12">
      <% if !@ticket_details.nil? %>
        <%= render :partial => 'ticket_details/indexlist' %>
      <% else %>
        <p>No Open Tickets</p>
      <% end %>
      <%= link_to 'New Ticket', new_ticket_detail_path(:ticket_type_id => @ticket_type.id) %>
      
    </div>

 </div>

<%= render 'layouts/links', locals: {item: @ticket_type} %>
