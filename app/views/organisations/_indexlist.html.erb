<table class="table table-striped table-responsive" id ="organisations" >
  <thead>
    <tr>
	      	<th></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>

        <td>
        	<% if can? :read, @organisation %>
	            <%= link_to organisation_path(@organisation), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
	              <i class ="fa fa-eye"></i>
	            <% end -%>
	        <% end %>
	        <% if can? :edit, @organisation %>
	            <%= link_to edit_organisation_path(@organisation), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
	              <i class ="fa fa-edit"></i>
	            <% end -%>
	        <% end %>
	        <% if can? :destroy, @organisation %>
			    <%= link_to organisation_path(@organisation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
			      <i class ="fa fa-times"></i>
			    <% end -%>
			<% end %>
        

        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>