<h1>Edit store_detail</h1>

<%= render 'form' %>

<%= link_to store_details_path do %><i class ="fa fa-arrow-left"></i><% end -%> |
<% if can? :read, @store_detail %>
    <%= link_to store_detail_path(@store_detail), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
      <i class ="fa fa-eye"></i>
    <% end -%>
<% end %>
<% if can? :destroy, @store_detail %>
    <%= link_to store_detail_path(@store_detail), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
      <i class ="fa fa-times"></i>
    <% end -%>
<% end %>
