<!--sidebar start-->
<aside>
    <div id="sidebar"  class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">
        
            <p class="centered"><%= image_tag "ui-sam.jpg", :class => "img-circle", :width => "60" %></p>
            <h5 class="centered"><%= current_user.name %></h5>
            <h6  class="centered"><%= current_user.role_name %></h6>
            <h6  class="centered"><%= current_user.location_name %></h6>
              
            <li class="mt">
                <%= link_to root_path do %>
                    <i class="fa fa-dashboard"></i>
                    <span>Dashboard</span>
                <% end %>
            </li>

            <li class="sub-menu">
                <a href="javascript:;" >
                    <i class="fa fa-exclamation-circle"></i>
                    <span>Priority</span>
                </a>
                <ul class="sub">
                    <% TicketPriority.all.each do |ticket_priority| %>
                        <li><%= link_to ticket_priority.name.capitalize, ticket_priority %></li>
                    <% end %>
                </ul>
            </li>

            <li class="sub-menu">
                <a href="javascript:;" >
                    <i class="fa fa-star"></i>
                    <span>Status</span>
                </a>
                <ul class="sub">
                    <% TicketStatus.all.each do |ticket_status| %>
                        <li><%= link_to ticket_status.name.capitalize, ticket_status %></li>
                    <% end %>
                </ul>
            </li>

            <li class="sub-menu">
                <a href="javascript:;" >
                    <i class="fa fa-ticket"></i>
                    <span>Categories</span>
                </a>
                <ul class="sub">

                    <% @ticket_categories = policy_scope(TicketCategory.where("ticket_categories.id IN (?)", current_user.organisation.ticket_category.subtree_ids)) %>
                    <% nested_dropdown(@ticket_categories.arrange).each do |ticket_category| %>
                        <li><%= link_to ticket_category[0], ticket_category_path(ticket_category[1]) %></li>
                    <% end %>
                </ul>
            </li>


            <li class="sub-menu">
                <a href="javascript:;" >
                    <i class="fa fa-building"></i>
                    <span>Location</span>
                </a>
                <ul class="sub">
                    <% Location.categories.each do |category| %>
                    <!-- scope categories here -->
                        <li><%= link_to category.capitalize, [category.downcase.pluralize] %></li><% end %>
                </ul>
            </li>

            
            


            <li class="sub-menu">
                <a href="javascript:;" >
                    <i class="fa fa-cogs"></i>
                    <span>Admin</span>
                </a>
                <ul class="sub">
                    <li><%= link_to 'Ticket Categories', ticket_categories_path %></li>
                    <li><%= link_to 'Ticket Statuses', ticket_statuses_path %></li>
                    <li><%= link_to 'Ticket Priorities', ticket_priorities_path %></li>
                    <li><%= link_to 'Organisations', organisations_path %></li>
                    <li><%= link_to 'People', people_path %></li>
                </ul>
            </li>
        
        </ul>
        <!-- sidebar menu end-->
    </div>
</aside>
<!--sidebar end-->

