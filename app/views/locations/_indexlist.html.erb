<% if !@locations.nil? %>
  <table class="table table-striped table-responsive" id ="locations" >
    <thead>
      <tr>
      	<th>Name</th>
      	<th>Parent</th>
      	<th>Category</th>
      	<th>Manager</th>
      </tr>
    </thead>

    <tbody>
      <% @locations.each do |location| %>
        <tr>
  	        <td><%= link_to location.name, location %></td>
  	        <td><%= link_to location.parent_name, location.parent %></td>
  	        <td><%= link_to location.category %> </td>
  	        <td><%= link_to location.manager_name, location.manager %></td>
  	        	
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>