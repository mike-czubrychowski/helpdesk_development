

<form class="form-inline ">
  <select id="toolbar_store_id" class="form-control" style="margin-top: 15px; margin-right: 15px; font-size 12px; height: 29px;" onChange="window.location.replace('http://192.168.16.59:3004/locations/' + document.getElementById('toolbar_store_id').value)">
    <option>ID...</option>
    <% Location.all.each do |location| %>
      <option><%= location.id %></option>
    <% end %>
  </select>

  <select id="toolbar_store_name" class="form-control" style="margin-top: 15px; margin-right: 15px; font-size 12px; height: 29px;" onChange="window.location.replace('http://192.168.16.59:3004/locations/' + document.getElementById('toolbar_store_name').value)">
    <option>Store Name...</option>
    <% Location.all.each do |location| %>
      <option value= <%=location.id %>><%= location.name %></option>
    <% end %>
  </select>

</form>
