<div class="row">
	<div class = "col-md-8 col-xs-12">
		<h1>ticket_status_histories</h1>
	</div>
	<div class = "col-md-4 col-xs-12">
		<h2>
			<% if can? :create, @ticket_status_histories %>
		        <%= link_to new_ticket_status_history_path, :class => 'btn btn-primary', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		            <i class ="fa fa-plus"></i>
		        <% end -%>
		    <% end %>
		</h2>
	</div>
</div>

<div class="row">
	<table class="table table-striped table-responsive" id ="ticket_status_histories" >
	  <thead>
	    <tr>
		    	<th>Detail</th>
		    	<th>Status</th>
		    	<th>From</th>
		    	<th>To</th>
		    	<th>Updated by</th>
		      	<th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @ticket_status_histories.each do |ticket_status_history| %>
	      <tr>
		        <td><%= ticket_status_history.detail %></td>
		        <td><%= ticket_status_history.status %></td>
		        <td><%= ticket_status_history.from %></td>
		        <td><%= ticket_status_history.to %></td>
		        <td><%= ticket_status_history.updated_by %></td>
	
	        <td>
	        	<% if can? :read, @ticket_status_history %>
		            <%= link_to ticket_status_history_path(@ticket_status_history), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		              <i class ="fa fa-eye"></i>
		            <% end -%>
		        <% end %>
		        <% if can? :edit, @ticket_status_history %>
		            <%= link_to edit_ticket_status_history_path(@ticket_status_history), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
		              <i class ="fa fa-edit"></i>
		            <% end -%>
		        <% end %>
		        <% if can? :destroy, @ticket_status_history %>
				    <%= link_to ticket_status_history_path(@ticket_status_history), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
				      <i class ="fa fa-times"></i>
				    <% end -%>
				<% end %>
	        

	        </td>
	        
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<br>
<br>

<%= link_to 'New Status history', new_ticket_status_history_path %>
