<p id="notice"><%= notice %></p>

<p>
  <strong>Detail:</strong>
  <%= @ticket_user.detail %>
</p>

<p>
  <strong>User:</strong>
  <%= @ticket_user.user %>
</p>

<%= link_to ticket_users_path do %><i class ="fa fa-arrow-left"></i><% end -%> |
<% if can? :edit, @ticket_user %>
    <%= link_to edit_ticket_user_path(@ticket_user), :class => 'btn btn-primary btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
      <i class ="fa fa-edit"></i>
    <% end -%>
<% end %>
<% if can? :destroy, @ticket_user %>
    <%= link_to ticket_user_path(@ticket_user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
      <i class ="fa fa-times"></i>
    <% end -%>
<% end %>