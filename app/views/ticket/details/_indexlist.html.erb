<table class="table table-striped table-responsive" id ="ticket_details" >
  <thead>
    <tr>
    	<th>Location</th>
    	<th>Title</th>
    	<th>Parent</th>

    	<th>Type</th>
    	<th>Category</th>
    	<th>Subcategory</th>
    	<th>Priority</th>
    	<th>Status</th>
    	<th>Logged by</th>
      	<th></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_details.each do |ticket_detail| %>
      <tr>
	        <td><%= link_if_you_can(:read, ticket_detail.location) %></td>
	        <td><%= link_if_you_can(:edit, ticket_detail) %>
	        <td><%= ticket_detail.parent_name %></td>
	        <td><%= ticket_detail.ticket_type %></td>
	        <td><%= ticket_detail.ticket_category_name %></td>
	        <td><%= ticket_detail.ticket_subcategory_name %></td>
	        <td><%= ticket_detail.ticket_priority %></td>
	        <td><%= ticket_detail.ticket_status_name %></td>
	        <td><%= ticket_detail.created_by_name %></td>

        <td>

        	<%= link_if_you_can(:read, ticket_detail, 'fa fa-eye') %>
        	<%= link_if_you_can(:edit, ticket_detail, 'fa fa-pencil') %>
			<%= link_if_you_can(:destroy, ticket_detail, 'fa fa-times') %>

        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>